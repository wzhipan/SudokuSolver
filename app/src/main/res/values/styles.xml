<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_cell_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/main_cell_text_view_default_value</item>
        <item name="android:textColor">@color/editable_cell_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="candidate_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/candidate_number_color</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="key_pad_button_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/key_pad_number_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="action_button_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/action_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/action_button_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
